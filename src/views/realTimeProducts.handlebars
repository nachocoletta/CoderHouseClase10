<div>
  <h1>Real Time Products</h1>
  
  
    <div style="display: flex; flex-direction: row; justify-content: space-between;">
        <!-- Columna 1 -->
        <div style="flex: 1;">
          <form id="form-add-product">
            <h1>Add Product</h1>
            <label for="input-title">Title:</label>
            <input type="text" id="input-title" name="title" required>

            <label for="input-description">Description:</label>
            <input type="text" id="input-description" name="description">

            <label for="input-code">Code:</label>
            <input type="text" id="input-code" name="code" required>

            <label for="input-price">Price:</label>
            <input type="text" id="input-price" name="price" required>

            <label for="input-stock">Stock:</label>
            <input type="text" id="input-stock" name="stock" required>

            <label for="input-category">Category:</label>
            <input type="text" id="input-category" name="category" required>
            <button type="submit">Enviar</button>
          </form>
        </div>
        <!-- Columna 2 -->
        <div style="flex: 1;">
          <form id="form-delete-product">
            <h1>Delete Product</h1>
            <label for="input-id-product">ID:</label>
            <input type="text" id="input-id-product" name="id" required>
            <button type="submit">Delete Product</button>
          </form>
        </div>
    </div>

</form>

    </div>
</div>

